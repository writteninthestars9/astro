RewriteEngine On
RewriteBase /

# 1. SEO-friendly article URL: /article/slug → article.php?slug=slug
RewriteRule ^article/([a-zA-Z0-9\-]+)$ article.php?slug=$1 [L,QSA]

# 2. SEO-friendly category URL: /category/slug → category.php?slug=slug
RewriteRule ^category/([a-zA-Z0-9\-]+)$ category.php?slug=$1 [L,QSA]

# 3. SEO-friendly list URL: /list/slug → article-list.php?slug=slug
RewriteRule ^list/([a-zA-Z0-9\-]+)$ article-list.php?slug=$1 [L,QSA]

# 4. Remove .php extension from all top-level pages like /contact → contact.php
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]

# Optional: Force trailing slash removal
 RewriteCond %{REQUEST_FILENAME} !-d
 RewriteRule ^(.+)/$ /$1 [R=301,L]
